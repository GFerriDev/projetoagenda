<%- include('includes/head') %>
<%- include('includes/navLogin') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class="display-2 text-center"> Login </h1>
            <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

            <%- include('includes/messages') %>
            <div class="row">

                <div class="col-lg my-4">
                    <h4>Cadastre-se agora</h4>
                    <form class="form-cadastro" action="/login/register" method="post">
                        <input type="hidden" name="_csrf" value= <%= csrfToken %>>
                        <div class="form-group">
                          <label> E-mail</label>
                          <input type="email" class="form-control" name="email">
                          <div class="error-msgE" font-color> </div>
                          
                          <small id="emailHelp" class="form-text text-muted">Nunca vamos compartilhar seu email, com ninguém.</small>
                        </div>
                        <div class="form-group">
                            <label> Senha</label>
                            <input type="password" class="form-control" name="password">
                            <div class="error-msgP" font-color> </div>
                          </div>
               
                        <button type="submit" class="btn btn-primary">Criar minha conta</button>
                      </form>

                </div>

                <div class="col-lg my-4">

                    <h4>Entre na sua conta</h4>
                    <p>Se você já possue uma conta, faça login abaixo</p>
                    <form class="form-login" action="/login/login" method="post">
                        <input type="hidden" name="_csrf" value= <%= csrfToken %>>
                        <div class="form-group">
                          <label> E-mail</label>
                          <input type="email" class="form-control" name="email">
                          <div class="error-msgE" font-color> </div>
                        </div>
                        <div class="form-group">
                            <label> Senha</label>
                            <input type="password" class="form-control" name="password">
                            <div class="error-msgP" font-color> </div>
                          </div>
               
                        <button type="submit" class="btn btn-primary">Login</button>
                      </form>


                </div>
            </div>

        <div class="col-lg-2"></div>
    </div>
</div>
<script type="module" src="../../frontend/main.js"></script>

<%- include('includes/footer') %>